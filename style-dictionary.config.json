{
  "source": ["./Exported_Figma_Tokens/**/*.json"],
  "platforms": {
    "web": {
      "transformGroup": "custom/group",
      "buildPath": "./tokens/",
      "files": [
        {
          "destination": "ost-foundation.css",
          "format": "custom/css/mode-support"
        },
        {
          "destination": "ost-semantic.css",
          "format": "custom/css",
          "filter": "custom/not-foundation"
        }
      ]
    }
  }
}
